<Window x:Class="BejelentkezesApp.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Felület" Height="600" Width="900"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#1E1E2D">

    <Grid>

        <Image Source="pack://application:,,,/Assets/admin.jpg" Stretch="UniformToFill" Opacity="0.3" />

        <TabControl Background="#1E1E2D" Foreground="White" FontSize="16" Margin="10" Opacity="0.9">

            <TabItem Header="Adminisztráció">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="67*"/>
                        <ColumnDefinition Width="370*"/>
                    </Grid.ColumnDefinitions>
                    <Border Background="#1E1E2D" CornerRadius="20" Width="850" Height="550" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.9" Grid.ColumnSpan="2" Margin="12,0,0,0">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <TextBlock Text="Adminisztrációs Felület" FontSize="26" FontWeight="Bold" Foreground="White"
                                           HorizontalAlignment="Center" Margin="0,20,0,10"/>

                                <Button Content="Kijelentkezés" Width="120" Height="30" FontSize="14" 
                                        Background="#F44336" Foreground="White" BorderThickness="0"
                                        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"
                                        Click="LogoutButton_Click"/>
                            </Grid>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="1">
                                <Label Content="Válassz táblát:" FontSize="16" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="TableComboBox" Width="200" Background="#2A2A3C" Foreground="Black" FontSize="14" Margin="0,0,10,0"/>
                                <Button x:Name="ListDataButton" Content="Betöltés" Width="100" Height="30" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0" Click="ListDataButton_Click"/>
                            </StackPanel>

                            <Border Background="#2A2A3C" CornerRadius="10" Grid.Row="2" Margin="0,10">
                                <DataGrid x:Name="DataGrid" AutoGenerateColumns="True"
                                          AutoGeneratingColumn="DataGrid_AutoGeneratingColumn"
                                          Background="#1E1E2D" Foreground="White" FontSize="14"
                                          RowBackground="#2A2A3C" AlternatingRowBackground="#383850"
                                          GridLinesVisibility="Horizontal"
                                          BorderBrush="#4CAF50" BorderThickness="1">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                </DataGrid>
                            </Border>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3">
                                <Button x:Name="SaveButton" Content="Mentés" Width="130" Height="40" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0" Margin="10,0" Click="SaveButton_Click"/>
                                <Button x:Name="UpdateButton" Content="Módosítás" Width="130" Height="40" FontSize="14"
                                        Background="#FFC107" Foreground="White" BorderThickness="0" Margin="10,0" Click="UpdateButton_Click"/>
                                <Button x:Name="DeleteButton" Content="Törlés" Width="130" Height="40" FontSize="14"
                                        Background="#F44336" Foreground="White" BorderThickness="0" Margin="10,0" Click="DeleteButton_Click"/>
                                <Button x:Name="CancelButton" Content="Mégse" Width="130" Height="40" FontSize="14"
                                        Background="#808080" Foreground="White" BorderThickness="0" Margin="10,0" Click="CancelButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Óra Tábla" Height="25" VerticalAlignment="Center" HorizontalAlignment="Left" Width="78">
                <Grid>
                    <Border Background="#1E1E2D" CornerRadius="20" Width="850" Height="550" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.9">
                        <Grid Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="41*"/>
                                <ColumnDefinition Width="229*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            
                            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,10,10,0" Grid.Column="1">
                                <Button Content="Betöltés" Width="120" Height="30" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0" 
                                        Click="LoadOraTable_Click"/>
                                <Button Content="Hozzáadás" Width="120" Height="30" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0" 
                                        Margin="10,0,0,0" Click="AddOraButton_Click"/>
                                <Button x:Name="DeleteOraButton" Content="Törlés" Width="120" Height="30" FontSize="14"
                                        Background="#F44336" Foreground="White" BorderThickness="0" Margin="10,0,0,0" Click="DeleteOraRowButton_Click"/>
                                <Button x:Name="SaveChangesOraButton" Content="Óra módosítása" Width="120" Height="30" FontSize="14"
                                        Background="#FFC107" Foreground="White" BorderThickness="0" Margin="10,0,0,0"
                                        Click="SaveChangesOraButton_Click"/>



                            </StackPanel>


                            <Border Background="#2A2A3C" CornerRadius="10" Grid.Row="1" Margin="0,10,0,10" Grid.ColumnSpan="2">
                                <DataGrid x:Name="OraDataGrid" AutoGenerateColumns="True"
                                          Background="#1E1E2D" Foreground="White" FontSize="14"
                                          RowBackground="#2A2A3C" AlternatingRowBackground="#383850"
                                          GridLinesVisibility="Horizontal"
                                          BorderBrush="#4CAF50" BorderThickness="1">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                </DataGrid>
                            </Border>

                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Számlázás">
                <Grid>
                    <Border Background="#1E1E2D" CornerRadius="20" Width="850" Height="550" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.9">
                        <Grid Margin="20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Számlázás" FontSize="26" FontWeight="Bold" Foreground="White"
                                       HorizontalAlignment="Center" Margin="0,20,0,10"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="0">
                                <Button Content="Számla létrehozása" Width="150" Height="30" FontSize="14"
                                        Background="#4CAF50" Foreground="White" BorderThickness="0" Margin="0,0,10,0"
                                        Click="CreateInvoiceButton_Click"/>
                                <Button Content="Számla törlése" Width="150" Height="30" FontSize="14"
                                        Background="#F44336" Foreground="White" BorderThickness="0" Margin="0,0,10,0"
                                        Click="DeleteInvoiceButton_Click"/>
                                <Button Content="Számlák betöltése" Width="150" Height="30" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0" Margin="0,0,10,0"
                                        Click="LoadInvoicesButton_Click"/>
                            </StackPanel>

                            <Border Background="#2A2A3C" CornerRadius="10" Grid.Row="1" Margin="0,10">
                                <DataGrid x:Name="InvoiceDataGrid" AutoGenerateColumns="True"
                                          Background="#1E1E2D" Foreground="White" FontSize="14"
                                          RowBackground="#2A2A3C" AlternatingRowBackground="#383850"
                                          GridLinesVisibility="Horizontal"
                                          BorderBrush="#4CAF50" BorderThickness="1">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>
                                </DataGrid>
                            </Border>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="2">
                                <Button x:Name="SaveInvoiceButton" Content="Mentés" Width="130" Height="40" FontSize="14"
                                        Background="#2196F3" Foreground="White" BorderThickness="0" Margin="10,0" Click="SaveInvoiceButton_Click"/>
                                <Button x:Name="UpdateInvoiceButton" Content="Módosítás" Width="130" Height="40" FontSize="14"
                                        Background="#FFC107" Foreground="White" BorderThickness="0" Margin="10,0" Click="UpdateInvoiceButton_Click"/>
                                <Button x:Name="CancelInvoiceButton" Content="Mégse" Width="130" Height="40" FontSize="14"
                                        Background="#808080" Foreground="White" BorderThickness="0" Margin="10,0" Click="CancelInvoiceButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
