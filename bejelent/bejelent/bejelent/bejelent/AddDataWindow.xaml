<Window x:Class="BejelentkezesApp.AddDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új adat hozzáadása" Height="555" Width="586"
        WindowStartupLocation="CenterScreen" Background="#1E1E2D" ResizeMode="NoResize">

    <Grid Margin="0,0,0,23">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0">
            <Grid Margin="20">
                <Border Background="#2A2A3C" CornerRadius="20" Padding="20">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="400">
                        <TextBlock Text="Új adat hozzáadása" FontSize="22" FontWeight="Bold" Foreground="White"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>


                        <StackPanel x:Name="FormPanel"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
            <Button Content="Mentés" Width="140" Height="40" FontSize="14" Background="#4CAF50"
                    Foreground="White" BorderThickness="0" Margin="10,0" Click="Save_Click"/>
            <Button Content="Mégse" Width="140" Height="40" FontSize="14" Background="#F44336"
                    Foreground="White" BorderThickness="0" Margin="10,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
